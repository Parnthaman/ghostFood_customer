<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/FBA_tv_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="@dimen/textsize_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FBA_tv_semi"
                style="@style/textblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/FBA_tv_verified"
                android:layout_alignBottom="@+id/FBA_tv_verified"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/FBA_tv_verified"
                android:layout_toStartOf="@+id/FBA_tv_verified"
                android:fontFamily="@font/appfont"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/FBA_tv_txt_bank_account_status"
                style="@style/textgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/FBA_tv_semi"
                android:layout_alignBottom="@+id/FBA_tv_semi"
                android:layout_toLeftOf="@+id/FBA_tv_semi"
                android:layout_toStartOf="@+id/FBA_tv_semi"
                android:fontFamily="@font/appfont"
                android:gravity="end"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normal" />


            <TextView
                android:id="@+id/FBA_tv_txt_civil_id"
                style="@style/textblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_txt_bank_account_status"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/FBA_tv_civil_id"
                style="@style/textgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_txt_civil_id"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normal" />


            <TextView
                android:id="@+id/FBA_tv_txt_beneficiary_name"
                style="@style/textblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_civil_id"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/FBA_tv_beneficiary_name"
                style="@style/textgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_txt_beneficiary_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normal" />


            <TextView
                android:id="@+id/FBA_tv_txt_beneficiary_address"
                style="@style/textblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_beneficiary_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/FBA_tv_beneficiary_address"
                style="@style/textgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_txt_beneficiary_address"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/appfont"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normal" />


            <TextView
                android:id="@+id/FBA_tv_txt_bank_name"
                style="@style/textblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_beneficiary_address"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"

                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/FBA_tv_bank_name"
                style="@style/textgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_txt_bank_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normal" />


            <TextView
                android:id="@+id/FBA_tv_txt_to_bank_name"
                style="@style/textblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_bank_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/FBA_tv_tobank_name"
                style="@style/textgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_txt_to_bank_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textsize_normal" />


            <TextView
                android:id="@+id/FBA_tv_linked_bankAccount"
                style="@style/textblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FBA_tv_tobank_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/bg_button_roundblue"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/textsize_normal" />


            <ImageView
                android:id="@+id/FBA_im_help"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignTop="@+id/FBA_tv_linked_bankAccount"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/FBA_tv_linked_bankAccount"
                android:layout_toRightOf="@+id/FBA_tv_linked_bankAccount"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_help" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
