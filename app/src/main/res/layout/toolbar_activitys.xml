<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:background="@color/appbgcolor"
    android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tlbar_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_leftarrow"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/tlbar_save"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tlbar_back"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_save"
            android:tint="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tlbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:fontFamily="@font/titlefont"
            android:gravity="left|center"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:visibility="visible" />


        <FrameLayout
            android:id="@+id/flCart"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_4sdp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tlbar_cart"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="bottom|center"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_cart"
                android:tint="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCartCounts"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="right|top"
                android:background="@drawable/rounded_cartcount"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:text="10"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />
        </FrameLayout>


    </RelativeLayout>

</android.support.v7.widget.Toolbar>