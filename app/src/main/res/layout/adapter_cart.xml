<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            card_view:cardCornerRadius="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/appfont"
                        android:text="asdasd"
                        android:textColor="@color/textcolor_black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tvItemName_ingredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text=""
                        android:textColor="@color/textcolor_gray"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llModifierIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvItemName"
                        android:layout_alignStart="@+id/tvItemName"
                        android:layout_below="@+id/tvItemName"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvModifierName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/appfont"
                            android:text=""
                            android:textColor="@color/textcolor_black"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                        <View
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="1dp" />

                        <TextView
                            android:id="@+id/tvIngrdientsName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_33sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/appfont"
                            android:lines="2"
                            android:text=""
                            android:textColor="@color/textcolor_black"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSpecialOffers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvItemName"
                        android:layout_alignStart="@+id/tvItemName"
                        android:layout_below="@+id/llModifierIngredients"
                        android:layout_weight="1"
                        android:fontFamily="@font/appfont"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:id="@+id/btnPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:fontFamily="@font/appfont"
                            android:text="$$$$"
                            android:textColor="@color/appbgcolor"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout
                            android:id="@+id/linearLayout6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:fontFamily="@font/appfont"
                                android:text="x"
                                android:textColor="@color/textcolor_gray"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/appfont"
                                android:text="10"
                                android:textColor="@color/textcolor_gray"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/appfont"
                                android:text="10"
                                android:textColor="@color/textcolor_gray"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_1sdp" />

                            <ImageView
                                android:id="@+id/ivDecrease"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/ic_cartminus" />

                            <Space
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="@dimen/_1sdp" />

                            <ImageView
                                android:id="@+id/ivIncrease"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/ic_cartplus" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDeleteCart"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/ivDelete"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_delete" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivItemImage"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/llModifierIngredients"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        fresco:actualImageScaleType="centerInside"
        fresco:failureImage="@drawable/ic_launcher"
        fresco:placeholderImage="@drawable/ic_launcher"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/white"
        fresco:roundingBorderWidth="@dimen/_2sdp" />
</FrameLayout>