<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/roundedwhite"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Alert"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:fontFamily="@font/appfont"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="Do you want to add ice?"
            android:textColor="@color/clr_red"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:fontFamily="@font/appfont"
                android:background="@drawable/blackrounded"
                android:textColor="@color/white"
                android:text="Cancel" />

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="1dp" />



            <Button
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:fontFamily="@font/appfont"
                android:background="@drawable/yellowrounded"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Continue" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>