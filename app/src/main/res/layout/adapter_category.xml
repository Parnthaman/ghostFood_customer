<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_category"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/tvCategoryImage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        fresco:actualImageScaleType="centerInside"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:fontFamily="@font/appfont"
        android:text="ggfhgfhfhfhfhfhfhhghhfhfhgfhfhfhgfhgfhg"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ivCatagoryIndicator"
        android:layout_toRightOf="@+id/tvCategoryImage"
        android:layout_toEndOf="@+id/tvCategoryImage" />

    <ImageView
        android:id="@+id/ivCatagoryIndicator"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_rightarrow" />

</LinearLayout>